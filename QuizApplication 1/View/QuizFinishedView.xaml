<UserControl x:Class="QuizApplication_1.View.QuizFinishedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizApplication_1.View"
             DataContext="{Binding PlayerViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding QuizFinished}" FontSize="24" FontWeight="Bold" Margin=" 0 0 0 20"/>
            <Button Content="Return to configuration"
                    Command="{Binding ShowConfigCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
